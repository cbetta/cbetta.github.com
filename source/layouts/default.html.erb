<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <title><%= "#{title} &raquo; " unless title.blank? %><%= data.site.site_title %></title>
    <meta name="description" content="<%= truncate(description, length: 140) %>">
    <meta name="keywords" content="<%= current_page.data.tags + ", " if current_page.data.tags %>cristiano, betta, paypal, braintree, ruby, rails, payments, developer, advocate">

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@cbetta" />
    <meta name="twitter:title" content="<%= truncate(title, length: 70) %>" />
    <meta name="twitter:description" content="<%= truncate(description, length: 200) %>" />
    <meta name="twitter:image" content="<%= image %>" />

    <meta property="og:title" content="<%= title %>" />
    <meta property="og:site_name" content="<%= data.site.title %>" />
    <meta property="og:description" content="<%= truncate(description, length: 500) %>" />
    <meta property="fb:app_id" content="416450921881127" />
    <meta property="og:type" content="<%= current_article.nil? ? "website" : "article" %>" />
    <meta property="og:image" content="<%= image %>" />
    <meta property="og:url" content="<%= data.site.root + current_page.url %>" />

    <link rel="mask-icon" color="#5bbad5" href="<%= asset_url("/safari-pinned-tab.svg") %>">
    <link rel="apple-touch-icon" sizes="180x180" href="<%= asset_url("/apple-icon.png") %>">
    <link rel="icon" type="image/png" sizes="16x16" href="<%= asset_url("/favicon-16x16.png") %>">
    <link rel="icon" type="image/png" sizes="32x32" href="<%= asset_url("/favicon-32x32.png") %>">
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#000000">

    <% unless current_article.nil?  %>
      <meta property="article:author" content="https://www.facebook.com/cbetta" />
    <% end %>

    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag "all", async: true %>
    <%= feed_tag :atom, "/atom.xml", title: "Atom Feed" %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  </head>
  <body data-search-path='<%= search_index_path %>'>
    <%= partial 'partials/sidebar' %>
    <div class="pusher">
      <%= partial "partials/navigation"  %>
      <div class="ui text container">
        <%= yield %>
      </div>
      <%= google_analytics_tag %>
    </div>
  </body>
</html>
